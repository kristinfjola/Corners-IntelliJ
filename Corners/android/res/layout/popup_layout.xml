<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center_horizontal|center_vertical">
     
     <LinearLayout android:id="@+id/starTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
         <ImageView android:id="@+id/starImg0"
	        android:contentDescription="@+strings/app_name"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:padding="1sp"
	        android:scaleType="fitXY"/>
         
         <ImageView android:id="@+id/starImg1"
	        android:contentDescription="@+strings/app_name"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:padding="1sp"
	        android:scaleType="fitXY"/>
         
         <ImageView android:id="@+id/starImg2"
	        android:contentDescription="@+strings/app_name"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:padding="1sp"
	        android:scaleType="fitXY"/>

     </LinearLayout>
     
     
     <ImageView android:id="@+id/charImg"
        android:contentDescription="@+strings/app_name"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"/>
     
     <TextView android:id="@+id/message0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"/>
     
     <TextView android:id="@+id/message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"/>
     
     <TextView android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"/>

</LinearLayout>
